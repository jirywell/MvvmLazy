<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
 <data>
     <variable
         name="viewModel"
         type="com.rui.home.ui.viewmodel.SignSetPwdViewModel" />
 </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/close"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_close"
            onClickCommand="@{viewModel.closeActivity}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_35"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/close">

            <TextView
                android:id="@+id/set_pwd_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:text="设置密码"
                android:textColor="#ff222222"
                android:textSize="23sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_25"
                android:layout_marginTop="@dimen/dp_35"
                android:layout_marginEnd="@dimen/dp_25"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/show_flag"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_5"
                    android:src="@drawable/sign_show_psw_press" />

                <EditText
                    android:id="@+id/pwd_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_toLeftOf="@id/show_flag"
                    android:layout_weight="5"
                    android:inputType="textPassword"
                    android:background="@null"
                    android:text="@={viewModel.passwordEt}"
                    android:hint="请输入8-16位密码"
                    android:textColor="#ff999999"
                    android:textSize="15sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:background="#E4E4E4" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_25"
                android:layout_marginTop="@dimen/dp_27"
                android:layout_marginEnd="@dimen/dp_25"
                android:text="密码需包含英文字母、数字、字符中的任意两种"
                android:textColor="#ff999999"
                android:textSize="12sp" />
            <Button
                android:id="@+id/verification_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/verification_code_btn"
                android:enabled="false"
                android:padding="12dp"
                android:text="确定"
                onClickCommand="@{viewModel.confirm}"
                android:textColor="#ffffffff"
                android:textSize="16sp" />
        </LinearLayout>


        <TextView
            android:id="@+id/verify_code_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_70"
            android:text="下次采用使用短信验证码登录"
            android:textColor="#ff999999"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/skip_verify_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="跳过密码设置"
            android:textColor="#ffffb100"
            android:textSize="15sp"
            onClickCommand="@{viewModel.skipSetPwd}"
            app:layout_constraintBottom_toTopOf="@id/verify_code_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
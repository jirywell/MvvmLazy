<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">


        <ImageView
            android:id="@+id/close"
            onClickCommand="@{viewModel.closeCommand}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <!--        账号密码登录-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_75"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/close">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/sign_login_word" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_25"
                android:layout_marginTop="@dimen/dp_35"
                android:layout_marginEnd="@dimen/dp_25"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/iv_clear"
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_10"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/ic_close"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/phone_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="账号"
                    android:textColor="#ff666666"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/sign_phone_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_toLeftOf="@id/iv_clear"
                    android:layout_toRightOf="@+id/phone_tv"
                    android:layout_weight="5"
                    android:background="@null"
                    android:hint="请输入账号"
                    android:inputType="text"
                    android:text="@={viewModel.userName}"
                    android:textColor="#ff999999"
                    android:textSize="15sp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:background="#E4E4E4" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_25"
                android:layout_marginTop="@dimen/dp_35"
                android:layout_marginEnd="@dimen/dp_25"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/show_flag"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/sign_show_psw_press" />

                <TextView
                    android:id="@+id/password_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="密    码"
                    android:textColor="#ff666666"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/sign_pwd_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_toLeftOf="@id/show_flag"
                    android:layout_toRightOf="@+id/password_tv"
                    android:layout_weight="5"
                    android:background="@null"
                    android:hint="请输入8-16位密码"
                    android:inputType="textPassword"
                    android:text="@={viewModel.password}"
                    android:textColor="#ff999999"
                    android:textSize="15sp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:background="#E4E4E4" />
            <RelativeLayout
                android:id="@+id/pwd_activity_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/seek_code_tv"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginStart="@dimen/dp35"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="@dimen/dp35"
                    android:layout_marginBottom="@dimen/dp20"
                    android:background="#E7EAE9"
                    android:gravity="center"
                    android:text="滑动验证" />

                <com.rui.sign.widget.VerificationSeekBar
                    android:id="@+id/sb_progress"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="35dp"
                    android:layout_marginBottom="20dp"
                    android:max="100"
                    android:maxHeight="45dp"
                    android:minHeight="45dp"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:progress="0"
                    android:progressDrawable="@drawable/bg_forgotpassword_seekbar"
                    android:thumb="@drawable/bg_seekbar_thumb"
                    android:thumbOffset="0dp" />


                <ImageView
                    android:id="@+id/finish_iv"
                    android:layout_width="@dimen/dp45"
                    android:layout_height="@dimen/dp45"
                    android:layout_alignTop="@id/sb_progress"
                    android:layout_alignEnd="@id/sb_progress"
                    android:src="@drawable/seek_finish"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/pwd_tv_top"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_margin="20dp"
                    android:gravity="center"
                    android:text="验证通过"
                    android:textColor="#3cc093"
                    android:visibility="gone" />

            </RelativeLayout>
            <TextView
                android:id="@+id/agree_private"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_25"
                android:layout_marginTop="@dimen/dp_40"
                android:layout_marginEnd="@dimen/dp_25"
                android:textColor="#ff999999"
                android:textSize="12sp"
                tools:text="登录即代表同意【用户服务协议】和【隐私条款】" />

            <!--            onClickCommand="@{viewModel.submlit}"-->
            <Button
                android:id="@+id/sign_btn"
                onClickCommand="@{viewModel.loginOnClickCommand}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginEnd="20dp"
                android:background="@drawable/verification_code_btn"
                android:enabled="false"
                android:padding="12dp"
                android:text="确定"
                android:textColor="#ffffffff"
                android:textSize="16sp" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <data>

        <variable
            name="viewModel"
            type="com.rui.home.ui.viewmodel.LoginViewModel" />

        <import type="android.view.View" />

    </data>


</layout>
